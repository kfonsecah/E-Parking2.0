{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "./src/types/global"]
  },
  "include": ["src/server.ts", "src/lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
